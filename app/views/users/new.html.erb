<body class="welcome"> 
<div id="login">
    <div id="middle">
    <div id="titles"><h1>Create Your Profile</h1></div>
    <% if flash[:error]%>
        <p class="text-danger" style="font-size:14px;">

        <% flash[:error].each do |e| %>
            <%= "#{e}. " %>
        <% end %>
        </p>
    <% end %>

    <%= form_for @user do |f| %>
        Username: <%= f.text_field :username %><br><br>
        Password:  <%= f.password_field :password %><br><br>
        Name: <%= f.text_field :name %><br><br>
        Age: <%= f.number_field :age %><br><br>
        Location: <%= f.text_field :location %><br><br>
        Occupation: <%= f.text_field :occupation %><br><br>
        <%= f.submit%>
    <% end %>
    <br><br>

    </div>
</div>